<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_logo">

    <fragment
        android:id="@+id/nav_logo"
        android:name="com.github.owolp.navigationviewpagertransition.LogoFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_logo">

        <action
            android:id="@+id/action_nav_logo_to_nav_view_pager"
            app:destination="@id/nav_view_pager" />

    </fragment>

    <fragment
        android:id="@+id/nav_view_pager"
        android:name="com.github.owolp.navigationviewpagertransition.PagerFragment"
        android:label="ViewPager"
        tools:layout="@layout/fragment_first" />

</navigation>